<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Верхняя панель -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:elevation="3dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="#5C5C5C" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Створення рецепту"
            android:textSize="18sp"
            android:textColor="#3B3B3B"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_logout"
            app:tint="#5C5C5C"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- Основний контент -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Блок загрузки фото -->
            <LinearLayout
                android:id="@+id/btnPickMainImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center"
                android:background="@drawable/bg_upload_box"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/ivMainImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_add_image"
                    app:tint="#B0B0B0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Завантажити фото"
                    android:textColor="#808080"
                    android:textSize="15sp"/>
            </LinearLayout>

            <!-- Назва -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Назва рецепту"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#D7D7D7"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Опис -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Короткий опис"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="#D7D7D7"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusBottomEnd="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textColor="#333333"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Складність + Категорія -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Складність -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Складність"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeColor="#D7D7D7"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/actvDifficulty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <!-- Категорія -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Категорія"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeColor="#D7D7D7"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/actvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:background="@null" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Порції + Час -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Порцій"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#D7D7D7"
                    app:boxBackgroundColor="#FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etServing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#333333"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Час приготування"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#D7D7D7"
                    app:boxBackgroundColor="#FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrepTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#333333"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Інгредієнти -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Інгредієнти"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#3B3B3B"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:id="@+id/ingredientsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddIngredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Додати інгредієнт"
                android:textColor="#2196F3"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_marginTop="4dp"/>

            <!-- Кроки -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Інструкція"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#3B3B3B"
                android:layout_marginTop="24dp"/>

            <LinearLayout
                android:id="@+id/stepsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Додати крок"
                android:textColor="#2196F3"
                app:cornerRadius="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_marginTop="4dp"/>

            <!-- Кнопка публікації -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreateRecipe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ОПУБЛІКУВАТИ"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                app:backgroundTint="#FF9B2D"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:elevation="2dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>