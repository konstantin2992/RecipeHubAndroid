<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFF"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecipeHub"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#333" />

        <!-- Поиск по названию -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пошук рецептів"
                android:paddingHorizontal="8dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Фильтры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фільтри"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:paddingHorizontal="8dp"/>

        <!-- Ингредиенты -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:paddingHorizontal="8dp">

            <EditText
                android:id="@+id/etIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введіть інгредієнти" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Время приготовления -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Час приготування"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp"/>

        <SeekBar
            android:id="@+id/seekBarPrepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="180"
            android:progress="60"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp"/>

        <TextView
            android:id="@+id/tvMaxPrepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="До 60 хв"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Сложность -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Складність"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp"/>

        <Spinner
            android:id="@+id/spinnerDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="8dp"/>

        <!-- Категория -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категорія"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="8dp"/>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="8dp"/>

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="8dp">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сбросить"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#999999"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пошук"
                android:layout_marginStart="8dp"
                android:backgroundTint="#FF6B6B"
                android:textColor="#FFF" />

        </LinearLayout>

        <!-- Прогресс бар -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#CCCCCC"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Рецептів не знайдено"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Спробуйте змінити параметри пошуку"
                android:textSize="14sp"
                android:textColor="#999999" />

        </LinearLayout>
        <!-- Список рецептов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>