<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecipeHub"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#333" />

        <!-- Поиск по названию -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пошук рецептів" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Фильтры -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фільтри"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Ингредиенты -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/etIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введіть інгредієнти" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Время приготовления -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Час приготування"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarPrepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="180"
            android:progress="60"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMaxPrepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="До 60 хв"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Сложность -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Складність"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Категория -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категорія"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Кнопки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сбросить"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#999999"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пошук"
                android:layout_marginStart="8dp"
                android:backgroundTint="#FF6B6B"
                android:textColor="#FFF" />

        </LinearLayout>

        <!-- Прогресс бар -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Список рецептов -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>